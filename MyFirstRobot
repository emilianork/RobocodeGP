package SimpleRobot;
import robocode.*;
import java.awt.Color;
import java.util.Random;
// API help : http://robocode.sourceforge.net/docs/robocode/robocode/Robot.html
/**
* MyFirstRobot - a robot by (your name here)
*/
public class MyFirstRobot extends Robot
{
	private double random = (new Random()).nextDouble();
	/**
	* run: MyFirstRobot's default behavior
	*/
	public void run() {
		// Initialization of the robot should be put here
		// After trying out your robot, try uncommenting the import at the top,
		// and the next line:
		setColors(Color.yellow,Color.blue,Color.yellow); // body,gun,radar
		// Robot main loop
		while(true) {
			turnGunRight(360);
		}
	}
	/**
	* onScannedRobot: What to do when you see another robot
	*/
	public void onScannedRobot(ScannedRobotEvent e) {
		// Replace the next line with any behavior you would like
		fire(ifGreater(Math.asin(e.getBearing()),(getVelocity() / getX()),(0 * e.getVelocity()),Math.asin(this.random)));
		turnRight(ifPositive(Math.asin(getBattleFieldHeight()),-1*Math.abs(e.getDistance()),ifGreater(Math.PI,e.getEnergy(),getVelocity(),getEnergy())));
		ahead((ifGreater(getBattleFieldWidth(),getX(),e.getEnergy(),getBattleFieldHeight()) / Math.sin(getEnergy())));
	}
	/**
	* onHitBullet: What to do when your bullet hit another robot
	*/
	public void onBulletHit(BulletHitEvent e) {
		// Replace the next line with any behavior you would like
		turnRight(Math.sin((this.random / getEnergy())));
		ahead(((e.getEnergy() / getBattleFieldHeight()) * (Math.PI - getBattleFieldWidth())));
	}
	/**
	* onHitByBullet: What to do when you're hit by a bullet
	*/
	public void onHitByBullet(HitByBulletEvent e) {
		// Replace the next line with any behavior you would like
		turnRight((Math.abs(e.getBearing()) + (e.getVelocity() - getBattleFieldHeight())));
		ahead((Math.sin(e.getVelocity()) + Math.cos(0)));
	}
	public double ifPositive(double bool,double e1,double e2) {
		if(bool >= 0) {
			return e1;
		} else {
			return e2;
		}
	}
	public double ifGreater(double b1,double b2,double e1,double e2) {
		if(b1 > b2) {
			return e1;
		} else {
			return e2;
		}
	}
}
